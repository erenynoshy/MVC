@model IEnumerable<shop.Product>
@{
    ViewBag.Title = "GetAll";
}
@section header
{
    <header id="header">
        <div class="container d-flex">

            <div class="logo mr-auto">
                <h1 class="text-light"><a href="index.html"><span>Shop</span></a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li class="active">
                        <a href="@Url.Action("Index", "product")">Home</a>
                    </li>
                    <li class="dropdown show">

                        <a class=" dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Products
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a href="@Url.Action("getcreatesection", "product")">Create Product</a>
                            <a href="@Url.Action("GetAll", "product")">Edit Product</a>

                        </div>

                    </li>
                    <li>
                        <a href="@Url.Action("Index", "order")">Order</a>
                    </li>
                    <li><a href="#portfolio">Porfile</a></li>
                    <li><a href="#team">About</a></li>

                    <li>
                        <a href="@Url.Action("Index", "Login")">Login</a>

                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Register")">Sign Up</a>

                    </li>
                    <li>
                        <a href="@Url.Action("Logout", "Home")">Logout</a>

                    </li>


                </ul>
            </nav><!-- .nav-menu -->

        </div>
    </header><!-- End Header -->
}
@section productimage
       {
    <div class="section-title">
        <h2 data-aos="fade-up">Porducts</h2>
        <p data-aos="fade-up">see all products and make your operation (Edit || Delete).</p>
    </div>

    <div class="row" data-aos="fade-up" data-aos-delay="100">
        <div class="col-lg-12 d-flex justify-content-center">
            <ul id="portfolio-flters">
                <li data-filter="*" class="filter-active">All</li>
                <li data-filter=".filter-app">App</li>
                <li data-filter=".filter-card">Card</li>
                <li data-filter=".filter-web">Web</li>
            </ul>
        </div>
    </div>

    <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
        @foreach (var item in Model)
        {

            <div class="col-lg-4 col-md-6 portfolio-item filter-web">

                <img src='~/productimgs/@item.ImagePath' alt="no image" width="350" height="250" />
                <div class="d-block text-center">
                    @Ajax.ActionLink("Edit", "Edit", new { id = item.ProductID }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "abc", InsertionMode = InsertionMode.Replace }) |

                    @Ajax.ActionLink("Delete", "Delete", new { id = item.ProductID }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "Emps", InsertionMode = InsertionMode.Replace })

                </div>
                <div class="portfolio-info">

                    <h4>@item.Title</h4>
                    <p>@item.Price</p>
                    <a href="~/Content/img/portfolio/portfolio-9.jpg" data-gall="portfolioGallery" class="venobox preview-link" title="Web 3">
                        <i class="bx bx-plus">
                            @*@Ajax.ActionLink("AddOrder", "AddOrder", new { id = item.ProductID }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "Emps", InsertionMode = InsertionMode.Replace })*@

                        </i>
                    </a>
                    <a href="#" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                </div>
            </div>



        }
    </div>
}
