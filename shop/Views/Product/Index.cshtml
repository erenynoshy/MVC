                                        <h4>know your product status</h4>
                                        <p>section to see which products has been accepted and which not </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section><!-- End Why Us Section -->
}
@section productimage
       {
    @foreach (var item in Model)
    {

        <div class="col-lg-4 col-md-6 portfolio-item filter-web">

            <img src='~/productimgs/@item.ImagePath' alt="no image" width="350" height="250" />
            <div class="d-block text-center">
                @Ajax.ActionLink("Edit", "Edit", new { id = item.ProductID }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "abc", InsertionMode = InsertionMode.Replace }) |

                @Ajax.ActionLink("Delete", "Delete", new { id = item.ProductID }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "Emps", InsertionMode = InsertionMode.Replace })

            </div>
            <div class="portfolio-info">

                <h4>@item.Title</h4>
                <p>@item.Price</p>
                <a href="~/Content/img/portfolio/portfolio-9.jpg" data-gall="portfolioGallery" class="venobox preview-link" title="Web 3">
                    <i class="bx bx-plus">
                        @*@Ajax.ActionLink("AddOrder", "AddOrder", new { id = item.ProductID }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "Emps", InsertionMode = InsertionMode.Replace })*@

                    </i>
                </a>
                <a href="#" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
            </div>
        </div>



    }
}
